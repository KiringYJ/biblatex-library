{
    // What to type-check
    "include": [
        "src",
        "scripts",
        "tests"
    ],
    "exclude": [
        "**/__pycache__",
        "build",
        "dist",
        "latex/**/build",
        "examples/**/build"
    ],
    // Interpreter / venv discovery
    "venvPath": ".",
    "venv": ".venv",
    "pythonVersion": "3.12",
    // Strict mode covers most type checking rules
    "typeCheckingMode": "strict",
    // Stub paths for type checking
    "stubPath": "stubs",
    // Additional strictness beyond default "strict" mode
    "reportImplicitStringConcatenation": "error", // Explicit string concatenation
    "reportUnnecessaryIsInstance": "error", // Remove redundant isinstance
    "reportUnnecessaryCast": "error", // Remove redundant casts
    "reportUnnecessaryComparison": "error", // Remove redundant comparisons
    "reportUnnecessaryContains": "error", // Remove redundant contains
    "reportUnusedCoroutine": "error", // No forgotten awaits
    // Make "src" imports work without relative dots
    "executionEnvironments": [
        {
            "root": "src",
            "extraPaths": [
                "src"
            ]
        },
        {
            "root": "scripts",
            "extraPaths": [
                "src"
            ]
        }
    ]
}
