{
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    // --- LaTeX Workshop tools ---
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk-xelatex",
            "command": "latexmk",
            "args": [
                "-xelatex",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ]
        },
        {
            "name": "latexmk-xelatex-shell-escape",
            "command": "latexmk",
            "args": [
                "-xelatex",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-outdir=%OUTDIR%",
                "-shell-escape",
                "%DOC%"
            ]
        },
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "biber",
            "command": "biber",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk (XeLaTeX + biber)",
            "tools": [
                "latexmk-xelatex"
            ]
        },
        {
            "name": "latexmk (XeLaTeX + biber, shell-escape)",
            "tools": [
                "latexmk-xelatex-shell-escape"
            ]
        },
        {
            "name": "XeLaTeX ➜ biber ➜ XeLaTeX ×2 (manual)",
            "tools": [
                "xelatex",
                "biber",
                "xelatex",
                "xelatex"
            ]
        }
    ],
    "latex-workshop.latex.recipe.default": "latexmk (XeLaTeX + biber)",
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.formatting.latex": "tex-fmt",
    // --- BibTeX Auto-formatting ---
    "latex-workshop.bibtex-format.tab": "tab",
    "latex-workshop.bibtex-format.align-equal.enabled": false,
    "latex-workshop.bibtex-fields.sort.enabled": false,
    "latex-workshop.bibtex-format.case": "lowercase",
    "latex-workshop.bibtex-format.surround": "Curly braces",
    "latex-workshop.bibtex-format.trailingComma": false,
    "latex-workshop.bibtex-format.sort.enabled": false,
    // Auto-format BibTeX files
    "[bibtex]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": false
    },
    // --- Python Language Server (Pylance) Configuration ---
    "python.analysis.autoImportCompletions": true,
    "python.analysis.diagnosticMode": "workspace",
    // --- Python Formatting and Linting ---
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        }
    }
}
